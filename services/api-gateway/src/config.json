{
  "services": {
    "product": {
      "url": "http://localhost:3001",
      "routes": [
        {
          "path": "products",
          "methods": ["GET", "POST"],
          "middlewares": ["auth"]
        },
        {
          "path": "products/:id",
          "methods": ["GET"],
          "middlewares": []
        }
      ]
    },
    "inventory": {
      "url": "http://localhost:3002",
      "routes": [
        {
          "path": "inventory/:id",
          "methods": ["PUT"],
          "middlewares": ["auth"]
        },
        {
          "path": "inventory/:id/details",
          "methods": ["GET"],
          "middlewares": ["auth"]
        }
      ]
    },
    "auth": {
      "url": "http://localhost:3003",
      "routes": [
        {
          "path": "auth/registration",
          "methods": ["POST"],
          "middlewares": []
        },
        {
          "path": "auth/login",
          "methods": ["POST"],
          "middlewares": []
        },
        {
          "path": "auth/verify-token",
          "methods": ["POST"],
          "middlewares": []
        },
        {
          "path": "auth/verify-code",
          "methods": ["POST"],
          "middlewares": []
        }
      ]
    },
    "users": {
      "url": "http://localhost:3004",
      "routes": [
        {
          "path": "users/:id",
          "methods": ["GET"],
          "middlewares": ["auth"]
        }
      ]
    }
  }
}
