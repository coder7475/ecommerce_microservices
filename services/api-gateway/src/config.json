{
  "services": {
    "product": {
      "url": "http://localhost:3001",
      "routes": [
        {
          "path": "products",
          "methods": ["GET", "POST"]
        },
        {
          "path": "products/:id",
          "methods": ["GET"]
        }
      ]
    },
    "inventory": {
      "url": "http://localhost:3002",
      "routes": [
        {
          "path": "inventory/:id",
          "methods": ["PUT"]
        },
        {
          "path": "inventory/:id/details",
          "methods": ["GET"]
        }
      ]
    }
  }
}
